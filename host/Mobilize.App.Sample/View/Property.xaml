<UserControl
    x:Class="Mobilize.App.Sample.View.Property"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mobilize.App.Sample.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignData}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel x:Name="Panel" DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:Property}}">
        <Label Content="MMMMM" />

        <Label />
        <TextBox Text="{Binding MyLabel}" />


    </StackPanel>
</UserControl>
